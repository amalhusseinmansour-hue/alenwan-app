class LiveChannel {
  final String name;
  final String category;
  final String thumbnail;
  final int viewers;
  final bool isLive;

  LiveChannel({
    required this.name,
    required this.category,
    required this.thumbnail,
    required this.viewers,
    required this.isLive,
  });
}

class LiveStreamPainter extends CustomPainter {
  final double animationValue;
  final Color color;

  LiveStreamPainter(this.animationValue, {required this.color});

  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint()..style = PaintingStyle.fill;

    // Draw animated particles
    for (int i = 0; i < 30; i++) {
      final progress = (animationValue + i * 0.033) % 1.0;
      final opacity = math.sin(progress * math.pi) * 0.5;

      paint.color = color.withOpacity(opacity);

      final x = size.width * (0.1 + (i * 0.27) % 0.8);
      final y = size.height * progress;
      final radius = 2 + math.sin(progress * math.pi) * 3;

      canvas.drawCircle(Offset(x, y), radius, paint);
    }

    // Draw subtle signal waves for live streaming effect
    final wavePaint = Paint()
      ..color = color.withOpacity(0.05)
      ..style = PaintingStyle.stroke
      ..strokeWidth = 1;

    for (int wave = 0; wave < 2; wave++) {
      final path = Path();
      for (double x = 0; x < size.width; x += 10) {
        final y = size.height * 0.5 +
            math.sin((x / 100) + animationValue * math.pi * 2 + wave) * 15;
        if (x == 0) {
          path.moveTo(x, y);
        } else {
          path.lineTo(x, y);
        }
      }
      canvas.drawPath(path, wavePaint);
    }
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => true;
}
